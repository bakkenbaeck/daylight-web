<!DOCTYPE html>
<html lang="en" class="theme-{{ theme }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sol</title>
    <link rel="preload" href="/GT-America-Light.woff" as="font" type="font/woff" crossorigin>
    <link rel="stylesheet" href="/style.css">
    <link rel="manifest" href="/manifest.json">
    <script>
      // placeholder
      document.documentElement.classList.add('wf-loaded');
    </script>
  </head>
  <body>
    <main class="app" id="app" data-latitude="{{location.latitude}}" data-longitude="{{ location.longitude }}" data-city="{{ city }}" data-country="{{ country }}">
      <a class="sun sun--main sun--left muted" href="/"><h1 class="text-small">Sol</h1></a>
      <div class="horizon">
        <div class="horizon__sky" aria-hidden="true">
          <div class="horizon__sky-wrap">
            <span class="horizon__sun sun sun--bottom js-sun {{ showTime }}" data-time="{{ now }}" style="left: {{sunPosition.x }}%; bottom: {{ sunPosition.y }}%;"></span>
          </div>
        </div>
        <div class="horizon__line">
          <time class="js-sunrise" datetime="{{ sunrise }}">{{ sunrise }}</time>
          <time class="js-sunset" datetime="{{ sunset }}">{{ sunset }}</time>  
        </div>
      </div>
      <p class="text js-sentence">{{{ sentence }}}</p>
      <p class="app__fotter text-small muted js-place">{{ city }}, {{ country }}</p>
    </main>
    <script src="/index.js"></script>
  </body>
</html>