<!DOCTYPE html>
<html lang="en" class="theme-{{ theme }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sol</title>
    <link rel="preload" href="/GT-America-Light.woff" as="font" type="font/woff" crossorigin>
    <link rel="stylesheet" href="/style.css">
    <link rel="manifest" href="/manifest.json">
    <script>
      // placeholder
      document.documentElement.classList.add('wf-loaded');
    </script>
  </head>
  <body>
    <main class="app" id="app" data-latitude="{{location.latitude}}" data-longitude="{{ location.longitude }}" data-sunset="{{ sunset.time }}" data-sunrise="{{ sunrise.time }}" data-city="{{ city }}" data-country="{{ country }}">
      <a class="sun sun--main sun--left muted" href="/"><h1 class="text-small">Sol</h1></a>
      <div class="horizon">
        <div class="horizon__sky">
          <div class="horizon__sky-wrap">
            <time class="horizon__sun horizon__sun--static sun sun--bottom" style="left: {{sunPosition.x }}%; bottom: {{ sunPosition.y }}%;" datetime="{{ now }}">{{ now }}</time>
          </div>
        </div>
        <div class="horizon__line">
          <time datetime="{{ sunrise.display }}">{{ sunrise.display }}</time>
          <time datetime="{{ sunset.display }}">{{ sunset.display }}</time>  
        </div>
      </div>
      <p class="text">{{{ sentence }}}</p>
      <p class="text-small muted">{{ city }}, {{ country }}</p>
    </main>
    <script src="/index.js"></script>
  </body>
</html>